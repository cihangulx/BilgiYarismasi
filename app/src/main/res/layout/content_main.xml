<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cihangul.bilgiyarismasi.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout3">

        <TextView
            android:text="Hoş Geldiniz \n Oyuna Başla Butonuna Basarak Oyunu Oynayabilirsiniz."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/textView3" />

        <Button
            android:text="Oyuna Başla"
            android:textSize="18sp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/start_buton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        >

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:padding="6dp"
                android:layout_marginBottom="4dp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="A Şıkkı"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_A"

                android:background="@drawable/text_background"/>

            <TextView
                android:padding="6dp"
                android:layout_marginBottom="4dp"
                android:text="B Şıkkı"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_B"
                android:background="@drawable/text_background"/>

            <TextView
                android:padding="6dp"
                android:layout_marginBottom="4dp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="C Şıkkı"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_C"
                android:background="@drawable/text_background"/>

            <TextView
                android:padding="6dp"
                android:layout_marginBottom="4dp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="D Şıkkı"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_D"
                android:background="@drawable/text_background"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="invisible"
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/soru_background">

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="Süre:"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:textColor="#fff" />

            <TextView
                android:text="/dk"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_dk"
                android:layout_weight="1"
                android:textColor="#fff" />

        </LinearLayout>

        <TextView
            android:text="Soru No."
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_soruNo"
            android:textColor="#fff"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:text="Soru Metni:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_soru_metni"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#fff" />
    </RelativeLayout>

</RelativeLayout>
